<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#62B1D0"
    android:padding="@dimen/mini_margin"
    android:clickable="true"
    android:orientation="vertical">

    <GridView
        android:id="@+id/gvMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/mini_margin"
        android:paddingRight="@dimen/mini_margin"
        android:paddingTop="@dimen/mini_margin"
        android:paddingBottom="@dimen/mini_margin"
        android:clipToPadding="false" />

</RelativeLayout>