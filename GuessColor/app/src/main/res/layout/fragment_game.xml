<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4c1342"
    android:id="@+id/rootView"
    android:clickable="true">


    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin">


        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/menu"/>

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/more_big_text"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="@dimen/mini_margin"
                android:src="@drawable/back"/>

            <ImageView
                android:id="@+id/btnRestart"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginLeft="@dimen/standard_margin"
                android:src="@drawable/restart"/>


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/bar"
        android:background="@color/white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mini_margin"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btnMinus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/more_standard_text"
            android:text="Минус"
            android:padding="@dimen/standard_margin"
            android:layout_marginRight="@dimen/mini_margin"
            android:gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:visibility="gone"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/more_standard_text"
            android:text="Плюс"
            android:padding="@dimen/standard_margin"
            android:gravity="center_horizontal"
            android:background="@color/green"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/mini_margin"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>